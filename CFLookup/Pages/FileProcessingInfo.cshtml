@page
@model CFLookup.Pages.FileProcessingInfoModel
@{
    ViewData["Title"] = "File processing info";
}

<h1>Latest updated files per game</h1>
<table class="table table-dark table-striped table-condensed">
    <thead>
        <tr>
            <th scope="col">Game</th>
            <th scope="col">Mod</th>
            <th scope="col">File</th>
            <th scope="col" class="text-end">Latest update</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var row in Model.ModFiles)
    {
            try
            {
                <tr>
                    <td scope="row"><a href="@row.GameUrl" target="_blank">@row.GameName</a></td>
                    <td>
                            <a href="@row.Links.WebsiteUrl" target="_blank">@row.Name</a>
                    </td>
                    <td>
                        @{
                            var file = @row.LatestFiles.OrderByDescending(f => f.FileDate).FirstOrDefault();
                        }
                        @if (file != null)
                        {
                            <a href="@row.Links.WebsiteUrl/files/@file.Id" target="_blank">@file.FileName</a>
                        }
                    </td>
                    <td class="text-end" title="@row.LatestUpdateUtc">@row.SinceLatestUpdate.ToHumanReadableFormat(true) ago</td>
                </tr>
            } catch (Exception ex)
            {
                <tr>
                    <td scope="row"><a href="@row.GameUrl" target="_blank">@row.GameName</a></td>
                    <td>
                            <a href="@row.Links.WebsiteUrl" target="_blank">@row.Name</a>
                    </td>
                    <td>
                        @{
                            var file = @row.LatestFiles.OrderByDescending(f => f.FileDate).FirstOrDefault();
                        }
                        @if (file != null)
                        {
                            <a href="@row.Links.WebsiteUrl/files/@file.Id" target="_blank">@file.FileName</a>
                        }
                    </td>
                    <td class="text-end" title="@row.LatestUpdateUtc">@row.SinceLatestUpdate.ToHumanReadableFormat(true) ago</td>
                </tr>
                <!-- Exception: @ex.ToString() -->
                <!-- GameId: @row.GameId -->
                <!-- ModId: @row.ProjectId -->
            }
        }
    </tbody>
</table>